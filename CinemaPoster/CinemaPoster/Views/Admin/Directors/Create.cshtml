@model CinemaPoster.Domain.Models.Director

@{
    Layout = "_AdminPanelLayout";
}

<h2>Edit Director</h2>

<form method="post" asp-controller="Directors" asp-action="Create">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter director's name" required />
    </div>
    <div class="d-flex justify-content-center gap-3 mt-4">
        <button type="submit" class="btn btn-success btn-lg">Create</button>
        <a asp-controller="Directors" asp-action="Index" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
