@model CinemaPoster.Domain.Models.Director

@{
    Layout = "_AdminPanelLayout";
}

<h2>Edit Director</h2>


<form method="post" asp-controller="Directors" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group w-75 mx-auto p-3">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group w-75 mx-auto p-3">
        <label for="Movies">Movies</label>
        <div class="form-control" id="Movies" name="Movies" readonly>
            @if (Model.Movies != null && Model.Movies.Any())
            {
                @string.Join(", ", Model.Movies.Select(movie => movie.Title))
            }
            else
            {
                <span>No movies associated with this director.</span>
            }
        </div>
        <small class="form-text text-muted">Movies are displayed as read-only.</small>
    </div>
    <div class="form-group d-flex justify-content-center gap-3 mt-4">
        <button type="submit" class="btn btn-primary btn-lg px-5">Save</button>
        <a class="btn btn-secondary btn-lg px-5" asp-controller="Directors" asp-action="Index">Cancel</a>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


